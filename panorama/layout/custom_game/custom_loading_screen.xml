<root>
	<styles>
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
		<include src="s2r://panorama/styles/custom_game/custom_loading_screen.vcss_c" />
	</styles>
	<scripts>
	<include src="s2r://panorama/scripts/custom_game/game_mode.vjs_c"/>
	</scripts>
	<Panel class="AddonLoadingRoot">
		<Panel id="CustomBg" >
			<Panel id="game_options_container" >
				<Panel id = "GameOptionsPanel">
					<Label id="GameOptionsPanelTitle" text="#addon_option_title" />
					<Panel id="RadiantGoldXPMultiplierPanel"	class="GameOptionsSubPanel">
						<Label id="RadiantGoldXPMultiplierTitle" class="GameOptionsLabel" text="#player_gold_xp_multiplier" />
						<DropDown id="player_gold_xp_multiplier_dropdown" class="GameOptionsDropdown" oninputsubmit="OnDropDownChanged('player_gold_xp_multiplier_dropdown')">
							<Label text="#player_gold_xp_multiplier_1" id="1"/>
							<Label text="#player_gold_xp_multiplier_1_1" id="1.1"/>
							<Label text="#player_gold_xp_multiplier_1_2" id="1.2"/>
							<Label text="#player_gold_xp_multiplier_1_3" id="1.3"/>
							<Label text="#player_gold_xp_multiplier_1_5" id="1.5"/>
							<Label text="#player_gold_xp_multiplier_2" id="2"/>
							<Label text="#player_gold_xp_multiplier_5" id="5"/>
						</DropDown>
					</Panel>
					<Panel id="DireGoldXPMultiplierPanel"	class="GameOptionsSubPanel">
						<Label id="DireGoldXPMultiplierTitle" class="GameOptionsLabel" text="#bot_gold_xp_multiplier" />
						<DropDown id="bot_gold_xp_multiplier_dropdown" class="GameOptionsDropdown" oninputsubmit="OnDropDownChanged('bot_gold_xp_multiplier_dropdown')">
							<Label text="#bots_multiplier_1" id="1"/>
							<Label text="#bots_multiplier_2" id="2"/>
							<Label text="#bots_multiplier_3" id="3"/>
							<Label text="#bots_multiplier_4" id="4"/>
							<Label text="#bots_multiplier_5" id="5"/>
							<Label text="#bots_multiplier_7_5" id="7.5"/>
							<Label text="#bots_multiplier_10" id="10"/>
						</DropDown>
					</Panel>
					<Panel id="RadiantPlayerNumberMultiplierPanel"	class="GameOptionsSubPanel">
						<Label id="RadiantPlayerNumberMultiplierTitle" class="GameOptionsLabel" text="#radiant_player_number" />
						<DropDown id="radiant_player_number_dropdown" class="GameOptionsDropdown">
							<Label text="10" id="10"/>
							<Label text="9" id="9"/>
							<Label text="8" id="8"/>
							<Label text="7" id="7"/>
							<Label text="6" id="6"/>
							<Label text="5" id="5"/>
							<Label text="4" id="4"/>
							<Label text="3" id="3"/>
							<Label text="2" id="2"/>
							<Label text="1" id="1"/>
						</DropDown>
					</Panel>
					<Panel id="DirePlayerNumberMultiplierPanel"	class="GameOptionsSubPanel">
						<Label id="DirePlayerNumberMultiplierTitle" class="GameOptionsLabel" text="#dire_player_number" />
						<DropDown id="dire_player_number_dropdown" class="GameOptionsDropdown">
							<Label text="10" id="10"/>
							<Label text="9" id="9"/>
							<Label text="8" id="8"/>
							<Label text="7" id="7"/>
							<Label text="6" id="6"/>
							<Label text="5" id="5"/>
							<Label text="4" id="4"/>
							<Label text="3" id="3"/>
							<Label text="2" id="2"/>
							<Label text="1" id="1"/>
						</DropDown>
					</Panel>
					<Label id="GameOptionsPanelBr" text="#addon_option_title_br" />
					<Panel id="RespawnTimePercentagePanel"	class="GameOptionsSubPanel">
						<Label id="RespawnTimePercentagePanelTitle" class="GameOptionsLabel" text="#respawn_time_percentage" />
						<DropDown id="respawn_time_percentage_dropdown" class="GameOptionsDropdown" oninputsubmit="OnDropDownChanged('respawn_time_percentage_dropdown')">
							<Label text="#respawn_time_percentage_125" id="125"/>
							<Label text="#respawn_time_percentage_100" id="100"/>
							<Label text="#respawn_time_percentage_75" id="75"/>
							<Label text="#respawn_time_percentage_0" id="0"/>
						</DropDown>
					</Panel>
					<Panel id="MaxLevelPanel"	class="GameOptionsSubPanel">
						<Label id="MaxLevelTitle" class="GameOptionsLabel" text="#max_level" />
						<DropDown id="max_level_dropdown" class="GameOptionsDropdown" oninputsubmit="OnDropDownChanged('max_level_dropdown')">
							<Label text="30" id="30"/>
							<Label text="50" id="50"/>
							<Label text="75" id="75"/>
							<Label text="#max_level_100" id="100"/>
							<Label text="#max_level_150" id="150"/>
							<Label text="200" id="200"/>
							<Label text="#max_level_500" id="500"/>
						</DropDown>
					</Panel>
					<Panel id="RadiantTowerPowerPanel"	class="GameOptionsSubPanel">
						<Label id="RadiantTowerPowerTitle" class="GameOptionsLabel" text="#radiant_tower_power" />
						<DropDown id="radiant_tower_power_dropdown" class="GameOptionsDropdown" oninputsubmit="OnDropDownChanged('radiant_tower_power_dropdown')">
							<Label text="50%" id="1"/>
							<Label text="75%" id="2"/>
							<Label text="100%" id="3"/>
							<Label text="125%" id="4"/>
							<Label text="#radiant_tower_power_150" id="5"/>
							<Label text="#radiant_tower_power_175" id="6"/>
							<Label text="#radiant_tower_power_200" id="7"/>
							<Label text="300%" id="8"/>
							<Label text="400%" id="9"/>
							<Label text="#radiant_tower_power_500" id="10"/>
						</DropDown>
					</Panel>
					<Panel id="DireTowerPowerPanel"	class="GameOptionsSubPanel">
						<Label id="DireTowerPowerTitle" class="GameOptionsLabel" text="#dire_tower_power" />
						<DropDown id="dire_tower_power_dropdown" class="GameOptionsDropdown" oninputsubmit="OnDropDownChanged('dire_tower_power_dropdown')">
							<Label text="50%" id="1"/>
							<Label text="75%" id="2"/>
							<Label text="100%" id="3"/>
							<Label text="125%" id="4"/>
							<Label text="#dire_tower_power_150" id="5"/>
							<Label text="#dire_tower_power_175" id="6"/>
							<Label text="#dire_tower_power_200" id="7"/>
							<Label text="300%" id="8"/>
							<Label text="400%" id="9"/>
							<Label text="#dire_tower_power_500" id="10"/>
						</DropDown>
					</Panel>
					<Panel id="RadiantTowerHealPanel"	class="GameOptionsSubPanel">
						<Label id="RadiantTowerHealTitle" class="GameOptionsLabel" text="#radiant_tower_heal" />
						<DropDown id="radiant_tower_heal_dropdown" class="GameOptionsDropdown">
							<Label text="0" id="0"/>
							<Label text="1" id="1"/>
							<Label text="5" id="5"/>
							<Label text="10" id="10"/>
							<Label text="20" id="20"/>
							<Label text="40" id="40"/>
						</DropDown>
					</Panel>
					<Panel id="DireTowerHealPanel"	class="GameOptionsSubPanel">
						<Label id="DireTowerHealTitle" class="GameOptionsLabel" text="#dire_tower_heal" />
						<DropDown id="dire_tower_heal_dropdown" class="GameOptionsDropdown">
							<Label text="0" id="0"/>
							<Label text="1" id="1"/>
							<Label text="5" id="5"/>
							<Label text="10" id="10"/>
							<Label text="20" id="20"/>
							<Label text="40" id="40"/>
						</DropDown>
					</Panel>
					<Panel id="StartingGoldPlayerPanel"	class="GameOptionsSubPanel">
						<Label id="StartingGoldPlayerTitle" class="GameOptionsLabel" text="#starting_gold_player" />
						<DropDown id="starting_gold_player_dropdown" class="GameOptionsDropdown">
							<Label text="600" id="600"/>
							<Label text="1000" id="1000"/>
							<Label text="#starting_gold_player_2000" id="2000"/>
							<Label text="#starting_gold_player_5000" id="5000"/>
						</DropDown>
					</Panel>
					<Panel id="StartingGoldBotPanel"	class="GameOptionsSubPanel">
						<Label id="StartingGoldBotTitle" class="GameOptionsLabel" text="#starting_gold_bot" />
						<DropDown id="starting_gold_bot_dropdown" class="GameOptionsDropdown">
							<Label text="600" id="600"/>
							<Label text="1000" id="1000"/>
							<Label text="#starting_gold_bot_2000" id="2000"/>
							<Label text="#starting_gold_bot_5000" id="5000"/>
						</DropDown>
					</Panel>
					<Panel id="SameHeroSelectionPanel"	class="GameOptionsSubPanel">
						<Label id="SameHeroSelectionTitle" class="GameOptionsLabel" text="#same_hero_selection" />
						<ToggleButton checked="false" class="GameOptionsToggle" id="same_hero_selection"/>
					</Panel>
					<Panel id="FastCourierPanel"	class="GameOptionsSubPanel">
						<Label id="FastCourierTitle" class="GameOptionsLabel" text="#fast_courier" />
						<ToggleButton checked="true" class="GameOptionsToggle" id="fast_courier"/>
					</Panel>
				</Panel>
			</Panel>
			<!-- 游戏选项显示 START-->
			<Panel id="display_options_container" >
				<Panel id="DisplayOptionsPanel">
					<Panel id="PlayerGoldXpPanel" class="DisplayOptionsSubPanel">
						<Label id="DisplayOptionsPlayerGoldXpTitle" class="DisplayOptionsLableTitle" text="#player_gold_xp_multiplier" />
						<Label id="DisplayOptionsPlayerGoldXp" class="DisplayOptionsLable" text="" />
					</Panel>
					<Panel id="BotGoldXpPanel" class="DisplayOptionsSubPanel">
						<Label id="DisplayOptionsBotGoldXpTitle" class="DisplayOptionsLableTitle" text="#bot_gold_xp_multiplier" />
						<Label id="DisplayOptionsBotGoldXp" class="DisplayOptionsLable" text="" />
					</Panel>
					<Panel id="RadiantTowerPanel" class="DisplayOptionsSubPanel">
						<Label id="DisplayOptionsRadiantTowerTitle" class="DisplayOptionsLableTitle" text="#radiant_tower_power" />
						<Label id="DisplayOptionsRadiantTower" class="DisplayOptionsLable" text="" />
					</Panel>
					<Panel id="DireTowerPanel" class="DisplayOptionsSubPanel">
						<Label id="DisplayOptionsDireTowerTitle" class="DisplayOptionsLableTitle" text="#dire_tower_power" />
						<Label id="DisplayOptionsDireTower" class="DisplayOptionsLable" text="" />
					</Panel>
					<Panel id="RespawnTimePanel" class="DisplayOptionsSubPanel">
						<Label id="DisplayOptionsRespawnTimeTitle" class="DisplayOptionsLableTitle" text="#respawn_time_percentage" />
						<Label id="DisplayOptionsRespawnTime" class="DisplayOptionsLable" text="" />
					</Panel>
					<Panel id="DMaxLevelPanel" class="DisplayOptionsSubPanel">
						<Label id="DisplayOptionsMaxLevelTitle" class="DisplayOptionsLableTitle" text="#max_level" />
						<Label id="DisplayOptionsMaxLevel" class="DisplayOptionsLable" text="" />
					</Panel>
				</Panel>
			</Panel>
			<!-- 游戏选项显示 END-->
			<Panel id="ChatHideButtonContainer" hittest="false">
				<Button id="ChatHideButtonHide" class="ChatHideButton" onactivate="HideChatTeamActivate()">
					<Label id="ChatHideButtonLabelHide" class="ChatHideButtonLabel" text="#hide_chat_team" />
				</Button>
				<Button id="ChatHideButtonShow" class="ChatHideButton" onactivate="ShowChatTeamActivate()">
					<Label id="ChatHideButtonLabelShow" class="ChatHideButtonLabel" text="#show_chat_team" />
				</Button>
			</Panel>
		</Panel>
	</Panel>
</root>
